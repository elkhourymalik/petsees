<div class="bg-lighter-grey">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="box">
          <%= link_to "See all offers", offers_path %>
          <h2><%= @offer.title %></h2>
          <div class="offer_photo">
            <% if @offer.photo.present? %>
              <%= cl_image_tag @offer.photo.path, height: 300, width: 300, crop: :fill %>
            <% else %>
              <%= image_tag "chat.png", height: 300, width: 300, crop: :fill %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @flat_coordinates %>;
      alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
