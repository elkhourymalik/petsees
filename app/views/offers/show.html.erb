


<div class="bg-lighter-grey">
  <div class="container text-center">
    <div class="row">

      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="box">
          <%= link_to "See all offers", offers_path %>
          <h2><%= @offer.title %></h2>
          <div class="offer_photo">
            <% if @offer.photo.present? %>
              <%= cl_image_tag @offer.photo.path, height: 300, width: 300, crop: :fill %>
            <% else %>
              <%= image_tag "chat.png", height: 100, width: 100, crop: :fill %>
            <% end %>
           <%# link_to "Book this offer", new_offer_order_path(@offer.id) %>
           <%= simple_form_for [@offer, @order] do |f| %>
            <%= f.input :user_id, as: :hidden, value: current_user.id %>
            <%= f.input :offer_id, as: :hidden, value: @offer.id %>
            <%= f.submit "Book this offer" %>
           <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @flat_coordinates %>;
      alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
