<div class="bg-lighter-grey">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="box">
          <h2><%= @offer.title %></h2>
          <div class="offer_photo">
            <% if @offer.photo.present? %>
              <%= image_tag @offer.photo, height: 300, width: 300, crop: :fill %>
            <% else %>
              <%= image_tag "logo.png", height: 300, width: 300, crop: :fill %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
