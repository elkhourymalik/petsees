


<div class="bg-lighter-grey">
  <div class="container text-center">
    <div class="row">
       <div class="col-xs-12 col-sm-8 col-sm-offset-2">
          <div class="box">
              <h2> Thanks fo your petting proposal! </h2>
              <%= link_to edit_offer_path do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to edit_offer_path, method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
              <h3><%= @offer.title %></h3>
              <div class="offer_photo">
                <% if @offer.photo.present? %>
                  <%= cl_image_tag @offer.photo.path, height: 300, width: 300, crop: :fill %>
                <% else %>
                <%= image_tag "chat.png", height: 100, width: 100, crop: :fill %>
                <% end %>
              </div>
              <%= link_to "See all our pet siters", offers_path %>
          </div>
        </div>
      </div>
    </div>
  </div>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var coord = <%= raw @flat_coordinates %>;
      alert('Flat coordinates are ' + coord.lat + ', ' + coord.lng);
    });
  <% end %>
<% end %>
