<div class="bg-lighter-grey padded">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <h2>What Offer would you like to create?</h2>
        <div class="box">
          <%= simple_form_for @offer do |f| %>
            <%= f.input :title, label: false, placeholder: "Title" %>
            <%= f.input :description, label: false, placeholder: "Description" %>
            <%= f.input :address, label: false, placeholder: "Address" %>
            <%= f.input :place_type, label: false, placeholder: "Place Type" %>
            <%= f.input :category, label: false, placeholder: "Category" %>
            <%= f.input :price, label: false, placeholder: "Price" %>
            <%= f.input :photo, label: false, placeholder: "Image" %>

            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
