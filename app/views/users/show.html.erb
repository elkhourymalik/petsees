
<div class="wrapper">
  <div class="text-center padded">
    <% if current_user.picture? %>
      <%= image_tag current_user.picture, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <% else %>
      <%= image_tag "cat_avatar.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
    <% end %>
    <p> <%= "#{current_user.first_name} #{current_user.last_name}" %></p>
    <p> <%= current_user.email %> </p>
    <%= link_to edit_user_registration_path do %>
      <p>Modify your profil <i class="fa fa-pencil"></i></p>
    <% end %>
  </div>
</div>

<div class="wrapper-grey">
  <div class="container">
    <div class="row">
      <h3>My Pet sittings</h3>
      <% current_user.offers.each do |offer| %>
        <% offer.orders.each do |order| %>
          <div class="col-xs-12">
            <div class="product">
              <div class='product-upvote'>
                <div class="product-arrow"></div>
                <div class='product-count'>95</div>
              </div>
              <%= image_tag cloudinary_url(order.offer.photo.path), class:'product-image' %>
              <div class='product-body'>
                <p><%= order.offer.title %></p>
                <p><%= order.offer.description %></p>
                <p><%= order.offer.category %> sitting</p>
                <p><%= order.offer.address %></p>
                <p><%= order.offer.place_type %></p>
                <p><%= order.offer.price %> € / day</p>
                <p><%= order.start_date %></p>
                <p><%= order.end_date %></p>
                <p><%= order.status %></p>

              </div>
              <ul class="list-inline product-controls">
                <%= link_to "Accept", order_accept_path(order) %>
                <%= link_to "Refuse", order_refuse_path(order) %>
                <!-- <li><a href=""><i class="fa fa-star"></i></a></li> -->
              </ul>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

